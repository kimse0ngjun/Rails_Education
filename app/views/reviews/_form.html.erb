<%= form_with(model: [ @product, review ], local: true) do |form| %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="field">
	<%= form.hidden_field :product_id, value: @product.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
